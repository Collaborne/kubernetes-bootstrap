{
    "root": true,

    "env": {
        "browser": false,
        "commonjs": false,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": false
        },
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "error",
        "no-this-before-super": "warn",
        "no-undef": "error",
        "no-unreachable": "error",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn"
    },

    "overrides": [
        {
            "files": "src/bootstrap.js",

            "parserOptions": {
                "sourceType": "script"
            }
        },
        {
            "files": "test/**/*.js",

            "env": {
                "mocha": true
            }
        }
    ]
}
